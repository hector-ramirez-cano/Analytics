{
  "security": {
    "vault_pass": "ansible/.vault_pass.txt",
    "vault": "ansible/.vault.yml"
  },
  "backend": {
    "model": {
      "private_data_dir": "ansible",
      "playbooks": {
        "fact_gathering": "fact_gathering.yml"
      },
      "cache":{
        "rule_set_cache_invalidation_s": 3600
      }
    },
    "controller": {
      "cache": {
        "cache_invalidation_s": 60
      },
      "syslog": {
        "RFC5424-port":1514,
        "db_path" : "."
      },
      "fact-gathering":{
        "polling_time_s": 5
      },
      "postgres": {
        "port": 5432,
        "hostname": "postgres_db",
        "name": "AnalyticsDB",
        "schema": "postgresql://",
        "max_idle_s": 60,
        "num_workers": 3,
        "min_size": 1,
        "max_size": 10,
        "reconnect_timeout_s": 15,
        "retry_timeout_s": 5,
        "request_timeout_s": 5,
        "$ref": "identity/postgres_db.json"
      },
      "influx": {
        "port": 8086,
        "hostname": "influx_db",
        "org": "C5i",
        "schema": "http://",
        "bucket": "analytics",
        "$ref": "identity/influx_db.json"
      },
      "telegram": {
        "$ref": "identity/telegram.json"
      }
    }
  }
}