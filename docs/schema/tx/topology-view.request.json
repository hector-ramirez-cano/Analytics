{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "required": ["type", "msg"],
    "properties": {
        "type": {
            "type": "string",
            "const": "topology-view"
        },
        "msg": {
            "type": "object",
            "required": ["msg", "type"],
            "properties": {
                "type": {
                    "type": "string",
                    "minLength": 1
                },
                "msg": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": ["id", "is-physical-view", "members", "name"],
                        "properties": {
                            "id": {
                                "type": "integer",
                                "minimum": 1
                            },
                            "is-physical-view": {
                                "type": "boolean"
                            },
                            "name": {
                                "type": "string",
                                "minLength": 1
                            },
                            "members": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "required": ["id", "x", "y"],
                                    "properties": {
                                        "id": {
                                            "type": "integer",
                                            "minimum": 1
                                        },
                                        "x": {
                                            "type": "number"
                                        },
                                        "y": {
                                            "type": "number"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
