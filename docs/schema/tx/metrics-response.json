{
    "type": "object",
    "required": ["type", "metrics", "msg"],
    "properties": {
        "type": {
            "type": "string",
            "const": "metrics"
        },
        "metrics": {
            "type": "string",
            "minLength": 1
        },
        "msg": {
            "type": "object",
            "required": ["data", "range"],
            "properties": {
                "data": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": ["time", "value"],
                        "properties": {
                            "time": {
                                "type": "number"
                            },
                            "value": {
                                "type": "number"
                            }
                        }
                    }
                },
                "range": {
                    "type": "object",
                    "required": ["min-x", "min-y"],
                    "properties": {
                        "min-x": { "type": "number" },
                        "min-y": { "type": "number" }
                    }
                }
            }
        }
    }
}