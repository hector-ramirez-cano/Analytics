{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Metadata message",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "type": {
            "type": "string",
            "const": "metadata"
        },
        "msg": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "metadata": {
                    "oneOf": [
                        {
                            "type": "string",
                            "minLength": 1
                        },
                        {
                            "type": "array",
                            "items": {
                                "type": "string",
                                "minLength": 1
                            },
                            "minItems": 1
                        }
                    ]
                },
                "device-ids": {
                    "oneOf": [
                        {
                            "type": "integer",
                            "minimum": 1
                        },
                        {
                            "type": "array",
                            "items": {
                                "type": "integer",
                                "minimum": 1
                            },
                            "minItems": 1
                        }
                    ]
                }
            },
            "required": [
                "metadata",
                "device-ids"
            ]
        }
    },
    "required": [
        "type",
        "msg"
    ]
}
