{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "SyslogMessage",
  "type": "object",
  "required": ["type", "msg"],
  "properties": {
    "type": {
      "const": "syslog"
    },
    "msg": {
      "oneOf": [
        { "$ref": "#/$defs/SyslogObject" },
        {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/SyslogObject" }
        }
      ]
    }
  },
  "additionalProperties": false,

  "$defs": {
    "SyslogObject": {
      "type": "object",
      "required": ["type", "msg"],
      "properties": {
        "type": {
          "type": "string",
          "enum": ["set-filters", "request-size"]
        },
        "msg": {
          "type": "object"
        }
      },
      "additionalProperties": false,

      "allOf": [
        {
          "if": {
            "properties": { "type": { "const": "set-filters" } }
          },
          "then": {
            "properties": {
              "msg": { "$ref": "#/$defs/SetFiltersMsg" }
            }
          }
        },
        {
          "if": {
            "properties": { "type": { "const": "request-size" } }
          },
          "then": {
            "properties": {
              "msg": { "$ref": "#/$defs/RequestSizeMsg" }
            }
          }
        }
      ]
    },

    "SetFiltersMsg": {
      "type": "object",
      "required": ["start", "end", "facility", "severity", "offset"],
      "properties": {
        "start": { "type": "number", "exclusiveMinimum": 0 },
        "end": { "type": "number", "exclusiveMinimum": 0 },
        "facility": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "enum": [
              "kern","user","mail","daemon","auth","syslog","lpr","news",
              "uucp","cron","authpriv","ftp","ntp","security","console",
              "solaris","local0","local1","local2","local3","local4",
              "local5","local6","local7"
            ]
          }
        },
        "severity": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "enum": [
              "emerg","alert","crit","err",
              "warning","notice","info","debug"
            ]
          }
        },
        "message": { "type": "string" },
        "origin": { "type": "string" },
        "offset": { "type": "number", "minimum": 0 },
        "pid": { "type": "string" }
      },
      "additionalProperties": false
    },

    "RequestSizeMsg": {
      "type": "object",
      "maxProperties": 0
    }
  }
}
