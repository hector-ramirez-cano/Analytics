{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "polling-definition": {
      "type": "object",
      "properties": {
        "update-interval-s": {
          "type": "number",
          "minimum": 1
        },
        "field": {
          "type": "string",
          "minLength": 1
        },
        "device-id": {
          "type": "number",
          "minimum": 0
        },
        "type": {
          "type": "string",
          "const": "metadata"
        }
      },
      "required": ["field", "device-id", "type"],
      "additionalProperties": false
    }
  },
  "required": ["polling-definition"],
  "additionalProperties": false
}
