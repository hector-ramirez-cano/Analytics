{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "required": ["severity", "target", "reduce_logic", "source", "predicates"],
  "properties": {
    "severity": {
      "type": "string",
      "enum": [
        "emergency", "alert", "critical", "error",
        "warning", "notice", "info", "debug"
      ]
    },
    "target": {
      "type": "integer",
      "minimum": 1
    },
    "reduce_logic": {
      "type": "string",
      "enum": ["and", "or"]
    },
    "source": {
      "type": "string",
      "enum": ["facts", "syslog"]
    },
    "predicates": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["left", "op", "right"],
        "properties": {
          "left": {
            "type": ["string", "number", "boolean", "null", "object", "array"]
          },
          "op": {
            "type": "string",
            "enum": [
              "more_than", "more_than_equal", "less_than",
              "less_than_equal", "equal", "not_equal", "contains"
            ]
          },
          "right": {
            "type": ["string", "number", "boolean", "null", "object", "array"]
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
